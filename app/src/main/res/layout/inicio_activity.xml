<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Título con fondo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_inicio"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@color/verde"
        android:textColor="@color/white"/>

    <!-- Sección de entrada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <EditText
            android:id="@+id/entradamensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escribe un mensaje"
            android:inputType="text"
            android:importantForAutofill="no"
            android:minHeight="48dp" />
    </LinearLayout>

    <!-- Contenedor horizontal para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/boton_seleccionar_imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            android:backgroundTint="@color/verde"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button"/>

        <Button
            android:id="@+id/boton_subir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subir"
            android:backgroundTint="@color/verde"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button"/>

    </LinearLayout>

    <Button
        android:id="@+id/boton_ver_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Favoritos"
        android:backgroundTint="@color/verde"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <!-- Vista desplazable para mensajes e imágenes -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/contenedorprincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </ScrollView>

</LinearLayout>
